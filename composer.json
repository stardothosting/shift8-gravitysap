{
    "name": "shift8web/shift8-gravitysap",
    "description": "WordPress plugin that integrates Gravity Forms with SAP Business One using the Service Layer API to create Business Partner records.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Shift8 Web",
            "email": "info@shift8web.ca",
            "homepage": "https://www.shift8web.ca"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "autoload": {
        "psr-4": {
            "Shift8\\GravitySAP\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shift8\\GravitySAP\\Tests\\": "tests/"
        }
    }
} 