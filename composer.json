{
    "name": "shift8/gravitysap",
    "description": "WordPress plugin that integrates Gravity Forms with SAP Business One using the Gravity Forms Add-On Framework",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "gravity-forms", "sap", "business-one", "integration"],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Shift8 Web",
            "email": "info@shift8web.ca",
            "homepage": "https://www.shift8web.ca"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Shift8\\GravitySAP\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }
} 