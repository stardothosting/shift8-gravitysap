{
    "name": "shift8/integration-for-gravity-forms-and-sap-business-one",
    "description": "WordPress plugin that integrates Gravity Forms with SAP Business One",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Shift8 Web",
            "email": "info@shift8web.ca",
            "homepage": "https://shift8web.ca"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpunit/phpunit": "^9.6",
        "roave/security-advisories": "dev-latest",
        "wp-coding-standards/wpcs": "^2.3",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Shift8\\GravitySAP\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shift8\\GravitySAP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit-brain-monkey.xml --testdox",
        "test:unit": "phpunit --configuration phpunit-brain-monkey.xml --testdox",
        "test:legacy": "phpunit --configuration phpunit-simple.xml --testdox",
        "test:integration": "phpunit --testsuite=integration", 
        "test:acceptance": "phpunit --testsuite=acceptance",
        "test:coverage": "phpunit --configuration phpunit-brain-monkey.xml --coverage-text",
        "test:coverage-html": "phpunit --configuration phpunit-brain-monkey.xml --coverage-html tests/coverage/html",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "analyze": "psalm --show-info=true"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
